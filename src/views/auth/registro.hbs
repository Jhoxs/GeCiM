 {{>navbar}}
 <div class="prueba-blur" >
     <div class="cont-registro">
 <div class="form-registro">
        <form action="/registro" method="post" id="frm-reg">
            <h1 class="form-titulo" >Registro</h1>
            <hr>
            {{!grupo de nombres}}
            <div class="frm-group">
                <input type="text" id="fnombre" name="nombre" placeholder="Nombre" maxlength="20" required>
                <input type="text" id="fapellido" name="apellido" placeholder="Apellido" maxlength="20" required><br>
            </div>
            {{!grupo cedula}}
            <div class="frm-group">
                <input type="text" id="fcedula" name="cedula" placeholder="Cedula" maxlength="10" pattern="[0-9]{10}" required><br>
            </div>
            {{!grupo email}}
            <div class="frm-group">
                <input type="email" id="fcorreo" name="correo" placeholder="Correo Electronico" maxlength="40" required><br>
            </div>
            {{!grupo telefono}}
            <div class="frm-group">
                <input type="tel" id="ftelefono" name="telefono" placeholder="Teléfono" maxlength="10" pattern="[0-9]{10}" title="Ingresa un telefono valido" required><br>
            </div>
            <hr>
            {{!grupo pass1}}
            <div>
                <input type="password" id="fpass" name="clave" placeholder="Contraseña" maxlength="15" required><br>
            </div>
            {{!grupo pass2}}
            <div>
                <input type="password" id="fpass1" name="repass" placeholder="Repetir la contraseña" maxlength="15" required><br>
            </div>
            <hr>
            <p class="form-p-registro">Fecha de nacimiento:</p>
            <input id="fechaN" type="date" name="nacimiento"  min="1900-01-01"  required>
            
            <p class="form-p-registro">Sexo:</p>
            <button id="fsex" type="button"> <!--disabled-->
                Hombre
                <input id=h type="radio" name="sexo" value="Hombre">
            </button>
            <button id="fsex" type="button">
                Mujer
                <input id=m type="radio" name="sexo" value="Mujer">
            </button>
            <button id="fsex" type="button">
                Otros
                <input id="fsex" type="radio" name="sexo" value="Otros">
            </button>    
            
            <hr >
            
    
            <button onclick="location.href='/login'" type="button">Atras</button>
            <button type="submit" id="btn_aceptar">Aceptar</button>
    
        </form>
    </div>
 </div>
 </div>
 
{{!<script src="/js/script.js"></script>}}

<script>
    // Use Javascript
    let hoy = new Date();
    //selecciona el dia
    let dd = hoy.getDate();
    //selecciona el mes
    let mm = hoy.getMonth()+1; //Enero empieza en 0 por lo que es necesario agregar un 1, para que cumpla con el estandar
    //selecciona el año
    let yyyy = hoy.getFullYear();
    //establecemos el formato para que sea acorde al estandar del input
    if(dd<10){
    dd='0'+dd
    } 
    if(mm<10){
    mm='0'+mm
    } 

    hoy = yyyy+'-'+mm+'-'+dd;
    //hace que el dia minimo sea hoy
    document.getElementById("fechaN").setAttribute("max",hoy);
</script>
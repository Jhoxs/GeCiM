{{#if message}}
{{!se usa en caso de que existan varios mensajes de error}}
<div class="container p-1" style="position:fixed" >
    {{#each message}}
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="alert alert-danger alert-dismissible fade show" role="alert"> 
                {{this}}
                {{!message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

{{#if success}}
<div class="container p-4" style="position: fixed; top: 40px;">
    {{#each success}}
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{this}}
                {{!success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}